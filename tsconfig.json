{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "app",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "strictNullChecks": false,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es6",
      "es7"
    ],
    "types": [
      "chalk",
      "node",
      "source-map",
      "underscore.string",
      "yeoman-generator",
      "yosay",
      "rimraf"
    ]
  },
  "exclude": [
    "node_modules",
    "app"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
